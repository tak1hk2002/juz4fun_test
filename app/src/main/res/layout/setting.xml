<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/logouted"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_grey_black_light"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/login"
                android:layout_width="@dimen/btn_top_width"
                android:layout_height="@dimen/btn_top_height"
                android:background="@drawable/btn_hamburger_login_topbg"
                android:text="登入"
                android:textColor="@color/white" />

            <Button
                android:layout_width="@dimen/btn_down_width"
                android:layout_height="@dimen/btn_down_height"
                android:background="@drawable/btn_hamburger_login_downbg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/register"
                android:layout_width="@dimen/btn_top_width"
                android:layout_height="@dimen/btn_top_height"
                android:background="@drawable/btn_hamburger_reg_topbg"
                android:text="注冊"
                android:textColor="@color/white" />

            <Button
                android:layout_width="@dimen/btn_down_width"
                android:layout_height="@dimen/btn_down_height"
                android:background="@drawable/btn_hamburger_reg_downbg" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/logined"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_grey_black_light"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_light_white" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_light_white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/sys_logout"
                    android:layout_width="@dimen/btn_top_width"
                    android:layout_height="@dimen/btn_top_height"
                    android:background="@drawable/btn_hamburger_logout_topbg"
                    android:text="登出"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="@dimen/btn_down_width"
                    android:layout_height="@dimen/btn_down_height"
                    android:background="@drawable/btn_hamburger_logout_downbg" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/bg_grey_black_deep"
        android:orientation="vertical">
        <!--<ListView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/list"-->
        <!--android:background="@color/bg_grey_black_light"-->
        <!--android:divider="@color/separate_line"-->
        <!--android:dividerHeight="1dp"/>-->

        <RelativeLayout
            android:id="@+id/RA_my_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/bg_grey_black_deep"
            android:clickable="true"
            android:onClick="onClick_my_comment">

            <TextView
                android:id="@+id/onClick_my_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的評論"
                android:textColor="@color/separate_line"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="@dimen/icon_forward_arrow_dp"
                android:layout_height="@dimen/icon_forward_arrow_dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_forward_arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/RA_aboutus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/bg_grey_black_deep"
            android:clickable="true"
            android:onClick="onClick_aboutus">

            <TextView
                android:id="@+id/onClick_aboutus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有關我們"
                android:textColor="@color/separate_line"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="@dimen/icon_forward_arrow_dp"
                android:layout_height="@dimen/icon_forward_arrow_dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_forward_arrow" />

        </RelativeLayout>


        <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/button_aboutus"-->
        <!--android:textSize="20dp"-->
        <!--android:text="有關我們"-->

        <!--android:gravity="center" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray" />

        <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/button_feedback"-->
        <!--android:textSize="20dp"-->
        <!--android:text="提交意見"-->
        <!--android:gravity="center" />-->

        <RelativeLayout
            android:id="@+id/RA_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="onClick_feedback">

            <TextView
                android:id="@+id/onClick_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交意見"
                android:textColor="@color/separate_line"
                android:textSize="20dp"


                />

            <ImageView
                android:layout_width="@dimen/icon_forward_arrow_dp"
                android:layout_height="@dimen/icon_forward_arrow_dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_forward_arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本"
                android:textColor="@color/separate_line"
                android:textSize="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="1.1"
                android:textColor="@color/separate_line"
                android:textSize="20dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray" />


        <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->

        <!--android:textSize="20dp"-->
        <!--android:text="版本 1.0"-->
        <!--android:gravity="center" />-->
    </LinearLayout>

</LinearLayout>