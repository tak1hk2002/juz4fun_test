<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey_black_light">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
       >


        <TextView
            android:text="主題"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:textColor="@color/font_grey_white"/>

       <EditText
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:id="@+id/subject"
           android:textColor="@color/font_grey_white"
           android:layout_weight="0.65"
           />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">


        <TextView
            android:text="你的電郵"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:textColor="@color/font_grey_white"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:textColor="@color/font_grey_white"
            android:id="@+id/email"/>


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">


        <TextView
            android:text="內容"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:textColor="@color/font_grey_white"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:textColor="@color/font_grey_white"
            android:id="@+id/content"/>


    </LinearLayout>


    <ImageView

        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mascot_cry_comment"
        android:layout_gravity="center_horizontal"/>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp">


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="重設"
            android:id="@+id/button_reset"
            android:layout_gravity="left"
            android:background="@drawable/action_cell_reset"
            android:layout_marginRight="5dp"
            android:textColor="@color/font_white"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="提交"
            android:id="@+id/button_submit"
            android:layout_gravity="right"
            android:background="@drawable/action_cell_send"
            android:layout_marginLeft="5dp"
            android:textColor="@color/font_white"/>



    </LinearLayout>

    </RelativeLayout>

</LinearLayout>