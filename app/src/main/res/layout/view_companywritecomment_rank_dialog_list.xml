<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:minHeight="40dp"
    android:padding="5dp"
    android:layout_gravity="center_horizontal">


    <TextView
        android:text=""
        android:id="@+id/title_ranking"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.appyvet.rangebar.RangeBar
        android:id="@+id/dialog_rangebar"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        custom:tickStart="0"
        custom:tickInterval="1"
        custom:tickEnd="5"
        custom:rangeBar="false"
        custom:tickHeight = "1dp"
        custom:rangeBarColor="@color/font_grey_white"
        custom:connectingLineColor="@color/font_red"
        custom:tickColor="@color/font_white"
        custom:pinRadius="7dp"
        custom:pinMaxFont="12sp"
        android:layout_toRightOf="@+id/environment"/>

</LinearLayout>
