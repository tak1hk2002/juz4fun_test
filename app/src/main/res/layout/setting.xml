<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/logouted"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_grey_black_light"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/login"
                android:layout_width="@dimen/btn_top_width"
                android:layout_height="@dimen/btn_top_height"
                android:background="@drawable/btn_hamburger_login_topbg"
                android:text="登入"
                android:textColor="@color/white" />

            <Button
                android:layout_width="@dimen/btn_down_width"
                android:layout_height="@dimen/btn_down_height"
                android:background="@drawable/btn_hamburger_login_downbg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/register"
                android:layout_width="@dimen/btn_top_width"
                android:layout_height="@dimen/btn_top_height"
                android:background="@drawable/btn_hamburger_reg_topbg"
                android:text="注冊"
                android:textColor="@color/white" />

            <Button
                android:layout_width="@dimen/btn_down_width"
                android:layout_height="@dimen/btn_down_height"
                android:background="@drawable/btn_hamburger_reg_downbg" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/logined"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_grey_black_light"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_light_white" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_light_white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/sys_logout"
                    android:layout_width="@dimen/btn_top_width"
                    android:layout_height="@dimen/btn_top_height"
                    android:background="@drawable/btn_hamburger_logout_topbg"
                    android:text="登出"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="@dimen/btn_down_width"
                    android:layout_height="@dimen/btn_down_height"
                    android:background="@drawable/btn_hamburger_logout_downbg" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/bg_grey_black_deep">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transcriptMode="alwaysScroll"
            android:background="@color/bg_grey_black_deep"
            android:divider="@drawable/list_divider"
            android:dividerHeight="1dp"/>

    </LinearLayout>

</LinearLayout>