<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey_black_light">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

      >

        <TextView android:text=" 地域"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="26dp"
            android:layout_weight="1"
            android:textColor="@color/font_grey_white"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/spinner_lagre_district"
            android:backgroundTint="@color/font_grey_white"
            />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView android:text=" 地區"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="26dp"
            android:layout_weight="1"
            android:textColor="@color/font_grey_white"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/spinner_district"
            android:backgroundTint="@color/font_grey_white"

            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView android:text=" 類別"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="26dp"
            android:layout_weight="1"
            android:textColor="@color/font_grey_white"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/spinner_category"
            android:backgroundTint="@color/font_grey_white"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView android:text=" 價錢"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:textSize="26dp"
            android:layout_weight="1"
            android:textColor="@color/font_grey_white"/>

        <!--<EditText-->
            <!--android:layout_width="157dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:id="@+id/editText4"-->
             <!--/>-->

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/spinner_price"
            android:backgroundTint="@color/font_grey_white"/>

    </LinearLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <Button
                android:layout_height="@dimen/btn_top_height"
                android:layout_width="match_parent"
                android:text="重設"
                android:id="@+id/button_clear"
                android:layout_gravity="left"
                android:background="@drawable/btn_actioncell_reset_topbg"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_down_height"
                android:background="@drawable/btn_actioncell_reset_downbg"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <Button
                android:layout_height="@dimen/btn_top_height"
                android:layout_width="match_parent"
                android:text="搜尋"
                android:id="@+id/button_search"
                android:layout_gravity="right"
                android:background="@drawable/btn_actioncell_send_topbg"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_down_height"
                android:background="@drawable/btn_actioncell_send_downbg"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

</LinearLayout>