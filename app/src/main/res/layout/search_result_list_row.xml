<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_companycomment_list_row_selector"
    android:padding="11dp">

    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </RelativeLayout>
    <!-- Thumbnail Image -->


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/right"
        android:layout_toRightOf="@+id/left">
        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="真好玩真好玩"
            android:textColor="@color/font_red"
            android:textSize="16dp"
            android:textStyle="bold" />


        <!-- price range -->
        <TextView
            android:id="@+id/price_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:text="$100-200"
            android:textColor="@color/font_grey_white"
            android:textSize="14dp" />


        <!-- category -->
        <TextView
            android:id="@+id/category"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price_range"
            android:layout_marginTop="1dip"
            android:text="室內"
            android:textColor="@color/font_grey_white"
            android:textSize="12dp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/category">

            <ImageView
                android:id="@+id/like_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="1dp"
                android:src="@drawable/like" />

            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/like_image"
                android:layout_toRightOf="@+id/like_image"
                android:padding="2dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/fair_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/like"
                android:padding="1dp"
                android:src="@drawable/fair" />

            <TextView
                android:id="@+id/fair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/fair_image"
                android:padding="2dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/dislike_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/fair"
                android:padding="1dp"
                android:src="@drawable/dislike" />

            <TextView
                android:id="@+id/dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dislike_image"
                android:padding="2dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="10dp" />

        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">


        <ImageView
            android:id="@+id/big_like"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/like" />

        <TextView
            android:id="@+id/average_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/big_like"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:paddingLeft="1dp"

            android:text="3.4"
            android:textSize="10dp"

            />
        <!--<TextView-->
        <!--android:id="@+id/rating2"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="10dp"-->
        <!--android:text="/5"-->
        <!--android:layout_below="@+id/big_like"-->
        <!--android:padding="1dp"/>-->
        <!--android:layout_centerHorizontal="true"-->
    </RelativeLayout>


</RelativeLayout>

